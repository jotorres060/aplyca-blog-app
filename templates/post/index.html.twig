{% extends 'layouts/app.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h3 class="mb-4">My Posts</h3>

    <div class="mb-4">
        <a class="btn btn-primary btn-sm" href="{{ path('post_create') }}">New Post</a>
    </div>

    <div class="card-columns">
        {% for post in posts %}
            <a class="text-decoration-none text-dark" href="{{ path('post_show_by_user', {id: post.id}) }}">
                <div class="card shadow">
                    {% if post.coverImage == null %}
                        <img class="card-img-top" src="{{ asset('images/cover.jpg') }}" alt="{{ post.title }}">
                    {% else %}
                        <img class="card-img-top" src="{{ asset('uploads/cover_images/'~post.coverImage) }}" alt="{{ post.title }}">
                    {% endif %}

                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.body | slice(0, 120) }}...</p>
                        <p class="card-text"><small class="text-muted">{{ post.createdDate | date }}</small></p>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
